---
import BaseLayout from '../../../layouts/BaseLayout.astro';
---

<BaseLayout title="EMDR Intake Assessment Form - Printable" description="Printable intake assessment form for EMDR Phase 1 history and treatment planning.">
  <style>
    @media print {
      .no-print { display: none !important; }
      body { background: white !important; font-size: 9pt !important; }
      .print-page {
        page-break-after: always;
        padding: 0 !important;
        margin: 0 !important;
      }
      .print-page:last-child { page-break-after: avoid; }
      .print-container {
        max-width: 100% !important;
        padding: 0.4in !important;
      }
      .form-line {
        min-height: 0.9rem;
      }
      section {
        margin-bottom: 0.4rem !important;
      }
      h2 {
        margin-bottom: 0.2rem !important;
      }
    }
    .form-line {
      border-bottom: 1px solid #d4c4ad;
      min-height: 1.1rem;
      display: block;
    }
    .form-line-sm {
      border-bottom: 1px solid #d4c4ad;
      min-height: 0.9rem;
      display: block;
    }
  </style>

  <!-- Print header bar -->
  <div class="no-print bg-forest-600 text-white py-3 sticky top-0 z-50">
    <div class="max-w-4xl mx-auto px-4 flex items-center justify-between">
      <div class="flex items-center gap-3">
        <a href="/clinicians/emdr/phase-1" class="text-white/80 hover:text-white transition-colors flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Phase 1
        </a>
        <span class="text-white/40">|</span>
        <span class="text-sm">EMDR Intake Assessment Form</span>
      </div>
      <button
        onclick="window.print()"
        class="inline-flex items-center gap-2 px-4 py-2 bg-white text-forest-700 rounded-lg hover:bg-forest-50 transition-colors text-sm font-medium"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
        </svg>
        Print Form
      </button>
    </div>
  </div>

  <div class="print-container max-w-4xl mx-auto px-4 py-6">

    <!-- Page 1: Condensed Intake Assessment -->
    <div class="print-page">
      <header class="mb-4 border-b-2 border-forest-500 pb-2">
        <div class="flex justify-between items-start">
          <div>
            <h1 class="font-serif text-xl font-bold text-charcoal">EMDR Intake Assessment</h1>
            <p class="text-xs text-charcoal/60">Phase 1: History & Treatment Planning</p>
          </div>
          <div class="text-right text-xs text-charcoal/60">
            <div>Date: _______________</div>
            <div>Clinician: _______________</div>
          </div>
        </div>
      </header>

      <!-- Row 1: Client Info -->
      <section class="mb-3">
        <h2 class="text-xs font-bold text-forest-700 uppercase tracking-wide mb-1 flex items-center gap-1">
          <span class="w-4 h-4 bg-forest-500 text-white rounded flex items-center justify-center text-[9px]">1</span>
          Client Information
        </h2>
        <div class="grid grid-cols-4 gap-2 text-xs">
          <div>
            <label class="text-[10px] text-charcoal/60">Client Name</label>
            <div class="form-line-sm"></div>
          </div>
          <div>
            <label class="text-[10px] text-charcoal/60">DOB / Age</label>
            <div class="form-line-sm"></div>
          </div>
          <div>
            <label class="text-[10px] text-charcoal/60">Caregiver</label>
            <div class="form-line-sm"></div>
          </div>
          <div>
            <label class="text-[10px] text-charcoal/60">Relation</label>
            <div class="form-line-sm"></div>
          </div>
        </div>
      </section>

      <!-- Row 2: Risk Assessment -->
      <section class="mb-3">
        <h2 class="text-xs font-bold text-forest-700 uppercase tracking-wide mb-1 flex items-center gap-1">
          <span class="w-4 h-4 bg-amber-500 text-white rounded flex items-center justify-center text-[9px]">2</span>
          Risk Assessment
          <span class="text-[9px] bg-amber-100 text-amber-700 px-1 rounded ml-1">Critical</span>
        </h2>
        <div class="grid grid-cols-4 gap-1 text-xs mb-1">
          <label class="flex items-center gap-1"><span class="w-3 h-3 border border-charcoal/40 rounded"></span> SI/HI</label>
          <label class="flex items-center gap-1"><span class="w-3 h-3 border border-charcoal/40 rounded"></span> Self-harm</label>
          <label class="flex items-center gap-1"><span class="w-3 h-3 border border-charcoal/40 rounded"></span> Substance use</label>
          <label class="flex items-center gap-1"><span class="w-3 h-3 border border-charcoal/40 rounded"></span> Safety concerns</label>
        </div>
        <div class="form-line-sm"></div>
      </section>

      <!-- Row 3: Goals, Strengths & Coping Skills -->
      <section class="mb-3">
        <h2 class="text-xs font-bold text-forest-700 uppercase tracking-wide mb-1 flex items-center gap-1">
          <span class="w-4 h-4 bg-forest-500 text-white rounded flex items-center justify-center text-[9px]">3</span>
          Goals, Strengths & Coping Skills
        </h2>
        <div class="grid grid-cols-3 gap-2 text-xs">
          <div class="border border-wood-200 rounded p-1">
            <label class="text-[10px] font-medium text-charcoal/60 block">Goals:</label>
            <div class="form-line-sm"></div>
            <div class="form-line-sm"></div>
          </div>
          <div class="border border-wood-200 rounded p-1">
            <label class="text-[10px] font-medium text-charcoal/60 block">Strengths:</label>
            <div class="form-line-sm"></div>
            <div class="form-line-sm"></div>
          </div>
          <div class="border border-wood-200 rounded p-1">
            <label class="text-[10px] font-medium text-charcoal/60 block">Current Coping Skills:</label>
            <div class="form-line-sm"></div>
            <div class="form-line-sm"></div>
          </div>
        </div>
      </section>

      <!-- Row 4: Trauma History -->
      <section class="mb-3">
        <h2 class="text-xs font-bold text-forest-700 uppercase tracking-wide mb-1 flex items-center gap-1">
          <span class="w-4 h-4 bg-forest-500 text-white rounded flex items-center justify-center text-[9px]">4</span>
          Trauma History
        </h2>
        <div class="space-y-1">
          <div class="form-line-sm"></div>
          <div class="form-line-sm"></div>
        </div>
      </section>

      <!-- Row 5: Triggers -->
      <section class="mb-3">
        <h2 class="text-xs font-bold text-forest-700 uppercase tracking-wide mb-1 flex items-center gap-1">
          <span class="w-4 h-4 bg-forest-500 text-white rounded flex items-center justify-center text-[9px]">5</span>
          Triggers
        </h2>
        <div class="form-line-sm"></div>
      </section>

      <!-- Row 6: Attachment Style -->
      <section class="mb-3">
        <h2 class="text-xs font-bold text-forest-700 uppercase tracking-wide mb-1 flex items-center gap-1">
          <span class="w-4 h-4 bg-forest-500 text-white rounded flex items-center justify-center text-[9px]">6</span>
          Attachment Style
          <a href="https://fetzer.org/sites/default/files/images/stories/pdf/selfmeasures/Attachment-AttachmentStyleQuestionnaire.pdf" target="_blank" class="text-[9px] text-teal-600 underline ml-1 no-print">(ASQ-SF)</a>
        </h2>
        <div class="form-line-sm"></div>
      </section>

      <!-- Row 7: Clinical & Medical Considerations -->
      <section class="mb-3">
        <h2 class="text-xs font-bold text-forest-700 uppercase tracking-wide mb-1 flex items-center gap-1">
          <span class="w-4 h-4 bg-forest-500 text-white rounded flex items-center justify-center text-[9px]">7</span>
          Clinical, Medical & Special Considerations
        </h2>
        <div class="form-line-sm"></div>
      </section>

      <!-- Row 8: Clinical Assessments with write-in space -->
      <section class="mb-3">
        <h2 class="text-xs font-bold text-forest-700 uppercase tracking-wide mb-1 flex items-center gap-1">
          <span class="w-4 h-4 bg-forest-500 text-white rounded flex items-center justify-center text-[9px]">8</span>
          Clinical Assessments
        </h2>
        <div class="space-y-1 text-xs">
          <div class="grid grid-cols-2 gap-2">
            <div class="flex items-start gap-1">
              <span class="w-3 h-3 border border-forest-400 rounded flex-shrink-0 mt-0.5"></span>
              <div class="flex-1">
                <span class="text-[10px]">UCLA PTSD Reaction Index:</span>
                <div class="form-line-sm"></div>
              </div>
            </div>
            <div class="flex items-start gap-1 bg-amber-50 p-1 rounded">
              <span class="w-3 h-3 border-2 border-amber-400 rounded flex-shrink-0 mt-0.5"></span>
              <div class="flex-1">
                <span class="text-[10px] font-medium">Dissociation Screening:</span>
                <div class="form-line-sm"></div>
              </div>
            </div>
          </div>
          <div class="grid grid-cols-3 gap-2">
            <div class="flex items-start gap-1">
              <span class="w-3 h-3 border border-forest-400 rounded flex-shrink-0 mt-0.5"></span>
              <div class="flex-1">
                <span class="text-[10px]">Affect Tolerance:</span>
                <div class="form-line-sm"></div>
              </div>
            </div>
            <div class="flex items-start gap-1">
              <span class="w-3 h-3 border border-forest-400 rounded flex-shrink-0 mt-0.5"></span>
              <div class="flex-1">
                <span class="text-[10px]">Avoidance Types:</span>
                <div class="form-line-sm"></div>
              </div>
            </div>
            <div class="flex items-start gap-1">
              <span class="w-3 h-3 border border-forest-400 rounded flex-shrink-0 mt-0.5"></span>
              <div class="flex-1">
                <span class="text-[10px]">Trauma Phobias:</span>
                <div class="form-line-sm"></div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Row 9: Treatment Plan Table (condensed) -->
      <section>
        <h2 class="text-xs font-bold text-forest-700 uppercase tracking-wide mb-1 flex items-center gap-1">
          <span class="w-4 h-4 bg-forest-500 text-white rounded flex items-center justify-center text-[9px]">9</span>
          Treatment Plan (Three-Pronged)
        </h2>
        <table class="w-full border-collapse text-[10px]">
          <thead>
            <tr class="bg-forest-100">
              <th class="border border-forest-300 px-1 py-0.5 text-left font-medium text-forest-800">Past Trauma Memories</th>
              <th class="border border-forest-300 px-1 py-0.5 text-left font-medium text-forest-800 w-8">Age</th>
              <th class="border border-forest-300 px-1 py-0.5 text-left font-medium text-forest-800">Present Symptoms</th>
              <th class="border border-forest-300 px-1 py-0.5 text-left font-medium text-forest-800">Triggers</th>
              <th class="border border-forest-300 px-1 py-0.5 text-left font-medium text-forest-800">Future</th>
            </tr>
          </thead>
          <tbody>
            <tr><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td></tr>
            <tr><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td></tr>
            <tr><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td></tr>
            <tr><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td></tr>
            <tr><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td><td class="border border-wood-200 px-1 py-1.5"></td></tr>
          </tbody>
        </table>
        <p class="text-[9px] text-charcoal/60 mt-1 italic">Process earliest memory (touchstone) first, then worst event, then remaining targets chronologically.</p>
      </section>
    </div>

    <!-- Page 2: Additional Notes -->
    <div class="print-page mt-8">
      <header class="mb-4 border-b-2 border-forest-500 pb-2">
        <h1 class="font-serif text-xl font-bold text-charcoal">EMDR Intake Assessment</h1>
        <p class="text-xs text-charcoal/60">Additional Notes</p>
      </header>

      <section class="mb-6">
        <h2 class="text-sm font-bold text-forest-700 uppercase tracking-wide mb-3">Session Notes</h2>
        <div class="border border-wood-200 rounded-lg p-3 min-h-[200px]">
          <div class="space-y-3">
            <div class="form-line"></div>
            <div class="form-line"></div>
            <div class="form-line"></div>
            <div class="form-line"></div>
            <div class="form-line"></div>
            <div class="form-line"></div>
            <div class="form-line"></div>
            <div class="form-line"></div>
          </div>
        </div>
      </section>

      <section class="mb-6">
        <h2 class="text-sm font-bold text-forest-700 uppercase tracking-wide mb-3">Additional Trauma History / Target Sequence</h2>
        <div class="border border-wood-200 rounded-lg p-3 min-h-[150px]">
          <div class="space-y-3">
            <div class="form-line"></div>
            <div class="form-line"></div>
            <div class="form-line"></div>
            <div class="form-line"></div>
            <div class="form-line"></div>
            <div class="form-line"></div>
          </div>
        </div>
      </section>

      <section class="mb-6">
        <h2 class="text-sm font-bold text-forest-700 uppercase tracking-wide mb-3">Safety Plan Notes</h2>
        <div class="border border-wood-200 rounded-lg p-3 min-h-[120px]">
          <div class="space-y-3">
            <div class="form-line"></div>
            <div class="form-line"></div>
            <div class="form-line"></div>
            <div class="form-line"></div>
          </div>
        </div>
      </section>

      <section>
        <h2 class="text-sm font-bold text-forest-700 uppercase tracking-wide mb-3">Treatment Plan Updates</h2>
        <div class="border border-wood-200 rounded-lg p-3 min-h-[120px]">
          <div class="space-y-3">
            <div class="form-line"></div>
            <div class="form-line"></div>
            <div class="form-line"></div>
            <div class="form-line"></div>
          </div>
        </div>
      </section>
    </div>

  </div>
</BaseLayout>
